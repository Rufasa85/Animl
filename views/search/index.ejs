<form action="" method="POST" role="form">
	<div class="row">
		<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xs-offset-3">
			<legend class='text-center'>Find some animals!</legend>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col-xs-offset-4">
			<div class="form-group">
				<label for="amimal">animal name</label>
				<input type="text" class="form-control" id="animal" name='animal'>
			</div>
		</div>
	</div>
	<% if (!currentUser) { %>
		<div class="row">
			<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col-xs-offset-4">
				<div class="form-group">
					<label for="zip">zip code</label>
					<input type="number" class="form-control" id="zip" name='zip'>
				</div>
			</div>
		</div>
	<% } else {%>
		<input type = 'hidden' name = 'county' value = <%= user.county%> >
	<% } %>

	<div class="row">
		<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 col-xs-offset-5">
			<button type="submit" class="btn btn-primary btn-block">Search!</button>
		</div>
	</div>	
</form>