<form action="" method="POST" role="form">
	<legend>Add a sighting!</legend>

	<div class="form-group">
		<label for="">animal</label>
		<input type="text" class="form-control" id="animal" name='animal' placeholder="Input field">
	</div>
	<div class="form-group">
		<label for="">date</label>
		<input type="date" class="form-control" id="date" name='date' placeholder="Input field">
	</div>
	<div class="form-group">
		<label for="">latitude</label>
		<input type="float" class="form-control" id="latitude" name='latitude' placeholder="Input field">
	</div>
	<div class="form-group">
		<label for="">longitude</label>
		<input type="float" class="form-control" id="longitude" name='longitude' placeholder="Input field">
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>