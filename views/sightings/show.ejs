<form action="" method="POST" role="form">
	<div class="row">
		<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xs-offset-3">
			<legend class='text-center'>Update this sighting!</legend>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col-xs-offset-4">
			<div class="form-group">
				<label for="">animal</label>
				<input type="text" class="form-control" id="animal" name='animal' value='<%=sighting.animal.name%>'>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 col-xs-offset-4">
			<div class="form-group">
				<label for="">date</label>
				<input type="date" class="form-control" id="date" name='date' value = '<%=date%>'>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-xs-offset-3">
			<div id='sightingsMap' class='center-block'>
			</div>
		</div>
	</div>

	<script type="text/javascript" src='/js/sightingMap.js'></script>
	<script src="https://maps.googleapis.com/maps/api/js?&v=3.21&callback=initMap&libraries=places&key=+<%=process.env.GOOGLE_KEY%>"></script>

	<div class="form-group hidden">
		<label for="">latitude</label>
		<input type="float" class="form-control" id="latitude" name='latitude' value='<%=sighting.latitude%>'>
	</div>
	<div class="form-group hidden">
		<label for="">longitude</label>
		<input type="float" class="form-control" id="longitude" name='longitude' value="<%=sighting.longitude%>">
	</div>

	<div class="row">
		<div class="col-xs-2 col-sm-2 col-md-2 col-lg-2 col-xs-offset-5">
			<button type="submit" class="btn btn-primary btn-block">Update sighting!</button>
		</div>
	</div>
</form>