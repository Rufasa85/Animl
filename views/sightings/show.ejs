<form action="" method="POST" role="form">
	<legend>edit a sighting!</legend>

	<div class="form-group">
		<label for="">animal</label>
		<input type="text" class="form-control" id="animal" name='animal' value='<%=sighting.animal.name%>'>
	</div>
	<div class="form-group">
		<label for="">date</label>
		<input type="date" class="form-control" id="date" name='date' value = '<%=date%>'>
	</div>
<div id='sightingsMap'>
</div>
<script src="https://maps.googleapis.com/maps/api/js?&v=3.21&callback=initMap&libraries=places&key=AIzaSyDm4l11g0kW2h5HHycX7Vsgm3gcJd4czSo"></script>
<script type="text/javascript" src='/js/sightingMap.js'></script>
	<div class="form-group hidden">
		<label for="">latitude</label>
		<input type="float" class="form-control" id="latitude" name='latitude' placeholder="Input field" value='<%=sighting.latitude%>'>
	</div>
	<div class="form-group hidden">
		<label for="">longitude</label>
		<input type="float" class="form-control" id="longitude" name='longitude' value="<%=sighting.longitude%>">
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>